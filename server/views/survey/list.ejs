<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/survey-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Create a Survey</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Q1</th>
                        <th class="text-center col-1">Answer 1</th>
                        <th class="text-center col-2">Q2</th>
                        <th class="text-center col-1">Answer 2</th>
                        <th class="text-center col-2">Q3</th>
                        <th class="text-center col-1">Answer 3</th>

                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else { %>
                        <th class="text-center col-3">Name</th>
                        <th class="text-center col-3">Q1</th>
                        <!--<th class="text-center col-1">Answer 1</th>-->
                        <th class="text-center col-3">Q2</th>
                        <!--<th class="text-center col-1">Answer 2</th>-->
                        <th class="text-center col-3">Q3</th>
                        <!--<th class="text-center col-1">Answer 3</th>-->
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < SurveyList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= SurveyList[count].name %></td>
                            <td class="text-center col-2"><%= SurveyList[count].question1 %></td>
                            <td class="text-center col-1"><%= SurveyList[count].answer1 %></td>
                            <td class="text-center col-2"><%= SurveyList[count].question2 %></td>
                            <td class="text-center col-1"><%= SurveyList[count].answer2 %></td>    
                            <td class="text-center col-2"><%= SurveyList[count].question3 %></td>
                            <td class="text-center col-1"><%= SurveyList[count].answer3 %></td>        
                            
                            
                            
                            <td class="text-center col-1">
                                <a href="/book-list/edit/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/book-list/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-3"><%= SurveyList[count].name %></td>
                            <td class="text-center col-3"><%= SurveyList[count].question1 %></td>
                          
                            <td class="text-center col-3"><%= SurveyList[count].question2 %></td>
                            
                            <td class="text-center col-3"><%= SurveyList[count].question3 %></td>
                           
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





